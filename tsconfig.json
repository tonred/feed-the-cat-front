{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {
            "*": [
                "node_modules/@types",
                "types/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules",
        "config-overrides.js"
    ],
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "node_modules/@types/node/globals.d.ts"
    ]
}
